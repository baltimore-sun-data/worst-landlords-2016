			//- h1 H1 / MONTSERRAT
			//- p P / LATO Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas nec eros ac risus condimentum pretium. In faucibus quis risus sit amet ornare.
			//- a(href="" target="_blank") A / LATO / GOLDENROD
			.listWrapper
				ul.list.list--landlords
					each landlord, index in landlords
						li.list__item(data-landlord=index, class="list__item--" + index)
							.landlordName
								h3 #{landlord.name}
								i.icon-right-big
							.stat.stat--properties
								p Properties
									br
									span #{landlord.numProperties}
							.stat.stat--units
								p Units
									br
									span #{landlord.numUnits}
							.stat.stat--violations
								p Violations
									br
									span #{landlord.numViolations}
				each landlord, lIndex in landlords
					ul.list.list--properties(data-landlord=lIndex, class="list--properties--" + lIndex)
						.landlordName
							.backButton
								i.icon-left-big
							h3 #{landlord.name} Properties
						each property, index in properties
							if property.landlord_num === lIndex
								li.list__item
									p #{property.address}
									.stat.stat--violations ECB
										p #{property.ecb}
									.stat.stat--violations HABC
										p #{property.pros}
									.stat.stat--violations Lead
										p #{property.lpv}
